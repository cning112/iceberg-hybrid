<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Define properties for log file locations -->
    <property name="LOG_DIR" value="${LOG_DIR:-./logs}"/>
    <property name="APP_NAME" value="iceberg-hybrid"/>

    <!-- Console appender with colored output for development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) [%thread] %cyan(%logger{36}) -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application log file -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>100MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{region}:%X{tableId}] -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error log file for high-severity events -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <file>${LOG_DIR}/${APP_NAME}-error.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-error.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{region}:%X{tableId}] -- %msg%n%ex</pattern>
        </encoder>
    </appender>

    <!-- Sync operations log for debugging cross-region synchronization -->
    <appender name="SYNC_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-sync.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-sync.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{30} [%X{syncEventId}:%X{region}:%X{tableId}] -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Performance metrics log -->
    <appender name="METRICS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${APP_NAME}-metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${APP_NAME}-metrics.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger configurations for different components -->
    
    <!-- Core application services -->
    <logger name="com.streamfirst.iceberg.hybrid.application" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Synchronization operations - detailed logging -->
    <logger name="com.streamfirst.iceberg.hybrid.application.SyncOrchestrator" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SYNC_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Write coordination - critical operations -->
    <logger name="com.streamfirst.iceberg.hybrid.application.WriteCoordinator" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Read routing - info level for performance monitoring -->
    <logger name="com.streamfirst.iceberg.hybrid.application.ReadRouter" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
    </logger>
    
    <!-- Adapters - configurable per environment -->
    <logger name="com.streamfirst.iceberg.hybrid.adapters" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    
    <!-- Domain events and operations -->
    <logger name="com.streamfirst.iceberg.hybrid.domain" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
    </logger>

    <!-- Special logger for performance metrics -->
    <logger name="METRICS" level="INFO" additivity="false">
        <appender-ref ref="METRICS_FILE"/>
    </logger>

    <!-- Special logger for sync events tracking -->
    <logger name="SYNC_EVENTS" level="INFO" additivity="false">
        <appender-ref ref="SYNC_FILE"/>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Environment-specific overrides -->
    <springProfile name="dev">
        <logger name="com.streamfirst.iceberg.hybrid" level="DEBUG"/>
        <root level="DEBUG"/>
    </springProfile>

    <springProfile name="prod">
        <logger name="com.streamfirst.iceberg.hybrid.adapters" level="ERROR"/>
        <root level="WARN"/>
    </springProfile>

</configuration>